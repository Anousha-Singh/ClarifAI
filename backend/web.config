<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified" />
    </handlers>
    <httpPlatform processPath="%HOME%\Python312\python.exe"
                  arguments="%HOME%\site\wwwroot\startup.sh"
                  stdoutLogEnabled="true"
                  stdoutLogFile="%HOME%\LogFiles\python.log"
                  startupTimeLimit="300">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="%HOME%\site\wwwroot" />
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="WEBSITE_HOSTNAME" value="clarifai-api.azurewebsites.net" />
        <environmentVariable name="WEB_CONCURRENCY" value="2" />
      </environmentVariables>
    </httpPlatform>
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="https://clarifai-omega.vercel.app" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="*" />
        <add name="Access-Control-Max-Age" value="86400" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>